pipeline {
    agent any

    triggers{
        pollSCM '* * * * *'
    }
    stages {
        stage('Build') {
            steps {
                echo "Building Project....."
            }
        }
        stage('Test') {
            steps {
                echo "Testing Project...."
                sh '''
                python hello.py
                '''
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploying Project....."
            }
        }
    }
}
